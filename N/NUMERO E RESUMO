Var
// Seção de Declarações das variáveis 
   CONTINUAR:CARACTERE
   PAR: INTEIRO
   IMPAR: INTEIRO
   NUMERO: INTEIRO

Inicio
// Seção de Comandos, procedimento, funções, operadores, etc...
  CONTINUA <- "S"
  PAR <- 0
  IMPAR <- 0
  ENQUANTO(CONTINUAR ="S") OU (CONTINUAR ="S") FAÇA
  ESCREVAL ("ESCREVA UM NUMERO:")
   LEIA(NUMERO)
   LEIA(CONTINUA)
  ESCREVAL ("")
  SE (NUMERO MOD 2 = 0) ENTAO
   ESCREVAL("PAR")
   ESCREVAL("")
  PAR <- PAR + 1
FIMSE
  SENAO
   ESCREVAL ("IMPAR")
   ESCREVAL ("")
  IMPAR <-IMPAR + 1
FIMSE
ESCREVAL ("DESEJA CONTINUAR S/N?")
LEIA (CONTINUAR)
FIMENQUANTO
